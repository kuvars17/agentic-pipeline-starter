# Agentic Pipeline Starter - Environment Configuration
# Copy this file to .env and adjust values as needed

# Application Settings
APP_NAME="Agentic Pipeline Starter"
APP_VERSION="0.1.0"
DEBUG=false
LOG_LEVEL="INFO"

# LLM Configuration
# Options: "ollama" for local LLM, "mock" for testing
LLM_MODE="mock"
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="qwen2.5:3b"
OLLAMA_TIMEOUT=30

# API Configuration
API_HOST="127.0.0.1"
API_PORT=8000
API_RELOAD=false

# Pipeline Configuration
MAX_RETRIES=3
REQUEST_TIMEOUT=10

# Security - CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:8080"

# Development Settings
# Set DEBUG=true and LLM_MODE="mock" for development
# Set LLM_MODE="ollama" when you have Ollama running locally